<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.yat3s.kitten.sample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.yat3s.kitten.sample.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.yat3s.kitten.sample.cases.CaseRecyclerViewActivity"/>
        <activity android:name="com.yat3s.kitten.sample.cases.CaseScrollViewActivity"/>
        <activity android:name="com.yat3s.kitten.sample.cases.CaseLinearLayoutActivity"/>
        <activity android:name="com.yat3s.kitten.sample.cases.CaseViewPagerActivity"/>
        <activity android:name="com.yat3s.kitten.sample.cases.CaseFragmentActivity"/>
    </application>

</manifest>