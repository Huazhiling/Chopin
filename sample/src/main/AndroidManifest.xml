<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.yat3s.chopin.sample">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".ChopinApplication"
        android:allowBackup="true"
        android:icon="@mipmap/abstract_4"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".cases.CaseRecyclerViewActivity"/>
        <activity android:name=".cases.CaseScrollViewActivity"/>
        <activity android:name=".cases.CaseLinearLayoutActivity"/>
        <activity android:name=".cases.CaseViewPagerActivity"/>
        <activity android:name=".cases.CaseFragmentActivity"/>
        <activity android:name=".cases.CaseWebViewActivity"/>
        <activity android:name=".cases.CaseCoordinatorLayoutActivity"/>
        <activity android:name=".cases.CaseAnyViewActivity"/>
        <activity android:name=".cases.CaseTextViewActivity"/>
        <activity android:name=".cases.CaseIndicatorDemosActivity"/>
        <activity android:name=".AdvancedSettingActivity"/>
    </application>

</manifest>